<div data-controller="select-silhouette" class="select-container">
  <div class="card-select  text-center">
    <h1>Pick your silhouette match!</h1>
  </div>


  <div class="select-grid">
    <div  class="row g-3 col-12">
      <% @silhouettes.each do |silhouette|  %>
        <div data-select-silhouette-target="silhouetteCard" data-action="click->select-silhouette#select" data-id="<%=silhouette.id %>" class="card-my-silhouette <%=  silhouette.neutral_silhouette %>-transparent d-flex flex-column align-items-center rounded rounded-2 mx-auto">
          <div class="card-silhouette <%= silhouette.neutral_silhouette.gsub(" ","_") %> d-flex px-2 w-100 py-1  overflow-hidden align-items-center">
            <div>
              <%= image_tag "solid_#{silhouette.neutral_silhouette.gsub(" ","_")}.png", style: "width:40px", class: "rounded-circle border bg-white mx-2" %>
            </div>
              <p class="text-white m-0"><%= silhouette.neutral_silhouette.upcase %></p>
            </div>
            <div  class="img-silhouette py-4" >
            <%= cl_image_tag silhouette.photo.key, style: "height:100px"  %>
            </div>
        </div>
      <% end %>
      <%= simple_form_for(@user_silhouette) do |f| %>
        <%= f.input :silhouette_id, as: :hidden, input_html: { data: {select_silhouette_target:  "inputId" } } %>
        <div class="discover-shape">
          <%= f.submit "Go to your Silhouette Match!", class: "btn btn-pink"  %>
      <% end %>
      </div>
    </div>
  </div>
