<div class="show-container">
  <div class= "silhouette-category">
    <%= @silhouette.category %>
  </div>

<div class= "container silhouette-card">

  <div class= "silhouette-graphic-description d-flex">
    <div class= "col-2">
      <%= cl_image_tag @silhouette.photo.key, class: 'img-fluid small-image' %>
    </div>
    <div class= "col-10 ps-2">
      <h1><%= @silhouette.neutral_silhouette.upcase %></h1>
    <h2>Your natural silhouette is the <%= @silhouette.neutral_silhouette.capitalize %> if:</h2>
    </div>
  </div>



  <div class= "silhouette-text-description container">
    <div class="no-patience ">
      <%= raw @silhouette.description%>
    </div>
<button><%= link_to "See your recommendations!",   user_recommendations_path(current_user.id), class:"text-decoration-none text-dark" %></button>
  </div>
</div>

<div class= "footer-pic d-flex justify-content-end">
<%= cl_image_tag @silhouette.photo.key, class: "img-body" %>
</div>
</div>
